{
  "name": "@vandrite/nspell",
  "version": "0.1.3-beta.1",
  "description": "Modern Hunspell-compatible spell checker with DAWG storage",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vandrite/vandrite-nspell"
  },
  "keywords": [
    "spell",
    "spellcheck",
    "spellchecker",
    "hunspell",
    "dawg",
    "typescript"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./async": {
      "import": {
        "types": "./dist/async.d.ts",
        "default": "./dist/async.js"
      }
    }
  },
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write .",
    "benchmark": "npx tsx benchmark/benchmark.ts",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@vandrite/dictionaries": "^1.1.3",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "nspell": "^2.1.5",
    "prettier": "^3.7.4",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
